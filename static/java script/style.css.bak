/* Radiobuttons haben linksbÃ¼ndigen Text */
.btn.radioButton {
	text-align: left;
	white-space: normal;
}
/* Klasse zur Hervorhebung richtiger Antworten */

.correct {
	color: #fff;
	border: 1px solid #008000;
	background-color: #008000;
	
}

/* Klasse zur Hervorhebung falscher Antworten */

.wrong {
	color: #fff;
	border: 1px solid red;
	background-color: red;
}

/* Venn Diagramm */
.VenContainer {
	background-color: #cccccc;
}
.vennDiagramm1 {
	background-color: yellow;
	border-radius: 50% 0 0 50%;
}
.vennDiagramm2 {
	background-color: #008000;
}
.vennDiagramm3 {
	background-color: blue;
	border-radius: 0 50% 50% 0;
}
.glossar .panel {
