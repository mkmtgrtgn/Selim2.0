@import url('http://fonts.cdnfonts.com/css/sofia-pro');

body
{
	background-color: white;
}

.jumbotron {
	font-family: "Sofia Pro", sans-serif;
	text-align: justify;
	text-justify: inter-word;
}

.jumbotron tr {
	border: 0;
}

.jumbotron td {
	width: 50%;
	border-top: none !important;
}

.jumbotron td p {
	font-weight: 400;
}

.container {
	max-width: 100%;
}

/*.jumbotron h2 {
	font-size: 6rem;
}*/

@media (min-width: 960px) {
	.jumbotron
	{
		margin-top: 200px;
		padding: 0px;
		background-color: transparent;
	}
	.jumbotron h2 {
		font-size: 2.5rem;
		color: green;
	}
	.jumbotron p {
		font-size: 1.5rem;
		font-weight: 300;
	}
	.jumbotron li {
		font-size: 1.5rem;
		font-weight: 300;
	}
	.paragraph {
		background-color: Azure;
		padding: 2px 20px 2px 20px;
		box-shadow: 0px 0px 5px SlateGray;
	}
	.aufgabe1 {
		margin: 0px 10px 10px 10px;
		padding: 10px 10px 10px 10px;
		background-color: rgb(190,220,220);
		border: 1px solid black;
	}
	.custombtn {
		float: right;
		margin-right: 5%;
		margin-bottom: 16px;
		background-color: Ivory;
		color: black;
		font-weight: 300;
		border: 1px solid green;
		border-radius: 0px;
		box-shadow: 0px 0px 2px green;
	}
	.custombtn:hover {
		border: 1px solid green;
	}
	.navButton
	{
		margin-left: 15px;
	}
	.headerSelim, .headerSelim .navbar-brand
	{
		border-bottom: 3px solid #0186BC;
		background-color: #ffffff;
	}
	.headerSelim .navbar-brand {
		border-bottom: none;
	}

	.iwisTipp /*.navbar-collapse.collapse*/
	{
		background: url('./iwi-klein.png') no-repeat 0 0 transparent;
		height: 120px !important;
		display: block;
		width: 98px;
	}
	.padding {
		padding: 15px;
	}

	blockquote {
		border-left-color: #0186BC;
	}

	#iwistipp h2 {
		white-space: nowrap;
		min-width: 250px;
	}

	/* Hervorhebung durch blau */
	.highlight {
		color: #0186BC;
	}

	video {
		border: 1px solid #333;
	}
}

@media (min-width: 1200px) {
	video {
	  min-width: 500px;
	}
}
